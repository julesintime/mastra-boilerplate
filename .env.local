# ===========================================
# API KEYS
# ===========================================

# Google Generative AI API Key
# Get your key from: https://aistudio.google.com/apikey
# GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here

# Groq API Key for ultra-fast inference
# Get your key from: https://console.groq.com/keys
# GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key
# Get your key from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# MODEL CONFIGURATION
# ===========================================

# Primary Models (for general use)
GEMINI_MODEL=gemini-2.5-pro
GROQ_MODEL=llama-3.3-70b-versatile
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Fast Models (for quick responses)
GEMINI_FAST_MODEL=gemini-2.5-flash
GROQ_FAST_MODEL=llama-3.1-8b-instant
OPENAI_FAST_MODEL=gpt-4o-mini
ANTHROPIC_FAST_MODEL=claude-3-5-haiku-20241022

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# Database Configuration
DATABASE_URL=file:./mastra.db

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================

# Site URL for MCP endpoint generation
SITE_URL=http://localhost:4111

# MCP Server Names (for endpoint exposure)
WEATHER_MCP_SERVER_NAME=weatherAgent
NETWORK_MCP_SERVER_NAME=autonomousNetwork

# ===========================================
# EVALUATION SYSTEM CONFIGURATION
# ===========================================

# Evaluation Models (using Groq for cost efficiency)
EVAL_LLM_MODEL=llama-3.3-70b-versatile
EVAL_FAST_MODEL=llama-3.1-8b-instant

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DESTINATION=console

# OpenTelemetry Tracing Configuration
OTEL_ENABLED=true
OTEL_SERVICE_NAME=mastra-agent-framework
OTEL_EXPORTER_TYPE=console
OTEL_SAMPLING_RATE=1.0